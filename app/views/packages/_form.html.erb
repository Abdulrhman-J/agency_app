<div class="w-25 mx-auto">
  <%= form_for @package do |f| %>
    <div class="form-group">
      <div class="input-field col s6">
        <%= f.label :name, "Name", class: "lead text-white" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-field col s6">
        <%= f.label :description, "Description", class: "lead text-white" %>
        <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-field col s6">
        <%= f.label :image, "Image", class: "lead text-white" %>
        <%= f.text_field :image, class: "form-control", placeholder: "Image" %>
      </div>
    </div>
    <div class="form-group">
      <div class="input-field col s6">
        <%= f.label :price, "Price", class: "lead text-white" %>
        <%= f.number_field :price, class: "form-control", placeholder: "Price" %>
      </div>
    </div>
    <%= f.submit "Submit", :class => "btn btn-success btn-block mt-5" %>
  <% end %>
</div>